<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.ssense.ssense.ActivityController.MainActivity">

    <ImageView
        android:id="@+id/imgGridViewProduct"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/hmprodbody" />

    <TextView
        android:id="@+id/tvwGirdViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round-necked T-shirt"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/wishListProductName"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvwGridViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.000"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/wishListPropertiesName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" VND"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/wishListPropertiesName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="@dimen/gridViewButtonColor"
            android:layout_height="@dimen/gridViewButtonColor"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorDarkGray"
            android:background="@drawable/round_button"/>

        <ImageButton
            android:layout_width="@dimen/gridViewButtonColor"
            android:layout_height="@dimen/gridViewButtonColor"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@drawable/round_button"/>

        <ImageButton
            android:layout_width="@dimen/gridViewButtonColor"
            android:layout_height="@dimen/gridViewButtonColor"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/round_button"/>

        <Button
            android:layout_width="@dimen/gridViewButtonColor"
            android:layout_height="@dimen/gridViewButtonColor"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorWhite"
            android:background="@drawable/round_button"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
