<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgWishListProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/hmprod"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_weight="1.78"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvwWishListProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:text="Round-necked t-shirt"
                android:textSize="@dimen/wishListProductName"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/wishListPropertiesName"
                    android:text="COLOUR:"/>

                <TextView
                    android:id="@+id/tvwWishListProductColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Dark kaki green"
                    android:textSize="@dimen/wishListPropertiesName"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/wishListPropertiesName"
                    android:text="SIZE:"/>

                <TextView
                    android:id="@+id/tvwWishListProductSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Size XS-XL"
                    android:textSize="@dimen/wishListPropertiesName"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2.1"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvwWishListPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="5.000.000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/xoagiahang"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@android:drawable/ic_delete"/>

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
