<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Pkemon"
             x:Class="Pkemon.MainPage">
    <ContentPage.Content>
        <StackLayout Padding="40"
                     Spacing="10">
            <Label Text="Enter your Pokemon number"/>
            <Entry x:Name="txtNumber"
                   Placeholder="Number"/>
            <Button Text="Find"
                    Clicked="Button_clicked"
                    BackgroundColor="#444"
                    TextColor="#fff"/>
            <Label x:Name="lblName"
                   Text="Name"
                   FontSize="30"
                   Margin="0.10"
                   HorizontalTextAlignment="Center"/>
            <Image x:Name="imgImage"
                   WidthRequest="200"
                   HeightRequest="200"
                   HorizontalOptions="Center"
                   BackgroundColor="#ccc"/>
            <Button Text="View info"
                    Clicked="Button2_clicked"
                    BackgroundColor="#444"
                    TextColor="#fff"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>