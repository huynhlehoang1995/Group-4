<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    //Product name

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@color/colorDarkGray"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round-necked T-shirt"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sizeProductName"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtProductColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Dark kaki green"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sizeProductName" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtIndexProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sizeProductName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="/"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sizeProductName" />

            <TextView
                android:id="@+id/txtSumProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="345"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sizeProductName" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/frmMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>


</LinearLayout>
